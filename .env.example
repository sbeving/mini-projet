# LogChat Environment Configuration
# Copy this to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_USER=logchat
POSTGRES_PASSWORD=logchat123
POSTGRES_DB=logchat
DATABASE_URL=postgresql://logchat:logchat123@db:5432/logchat?schema=public

# =============================================================================
# GENERAL
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:3001

# =============================================================================
# OLLAMA (Local AI - Always Available)
# =============================================================================
# Use docker internal URL or external URL
OLLAMA_URL=http://ollama:11434
# For external Ollama: OLLAMA_URL=http://your-ollama-server:11434
OLLAMA_MODEL=qwen2.5:0.5b

# =============================================================================
# OPENAI (GPT-4, GPT-4o, GPT-3.5)
# =============================================================================
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=
# Optional: Custom base URL (for Azure OpenAI or proxies)
# OPENAI_BASE_URL=

# =============================================================================
# ANTHROPIC (Claude)
# =============================================================================
# Get your API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=

# =============================================================================
# GOOGLE GEMINI
# =============================================================================
# Get your API key from https://ai.google.dev/
GEMINI_API_KEY=
# Alternative variable name
GOOGLE_API_KEY=

# =============================================================================
# OPENROUTER (Multi-Model Gateway)
# =============================================================================
# Get your API key from https://openrouter.ai/
# Provides access to Claude, GPT-4, Llama, Mistral, and many more
OPENROUTER_API_KEY=

# =============================================================================
# XAI / GROK
# =============================================================================
# Get your API key from https://x.ai/
XAI_API_KEY=
# Alternative variable name
GROK_API_KEY=

# =============================================================================
# DEFAULT AI SETTINGS
# =============================================================================
# Which provider to use by default: ollama, openai, anthropic, gemini, openrouter, grok
DEFAULT_AI_PROVIDER=ollama

# Default model (optional - uses provider's default if not set)
DEFAULT_AI_MODEL=

# Custom system prompt (optional - uses built-in log analysis prompt if not set)
AI_SYSTEM_PROMPT=

